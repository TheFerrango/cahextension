{

  "description": "Custom card deck management for Cards Agains Humanity",
  "manifest_version": 2,
  "name": "CARExtension",
  "version": "0.1",
  
  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Manage CAR presets",
    "default_popup": "popup/presetList.html"
  },

  "permissions": [ "storage" ],

  "content_scripts": [    
    {
      "matches": ["file:///*"],
      "js": ["helpers.js", "UIAddition.js", "cards.js"]
    }
  ]
}
